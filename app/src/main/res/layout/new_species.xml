<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="12dp">

    <EditText
        android:id="@+id/speciesNewName"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:ems="10"
        android:inputType="text"
        android:hint="@string/species_name"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:autofillHints="@string/species_name"/>

    <EditText
        android:id="@+id/speciesNewDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:inputType="textMultiLine"
        android:lines="2"
        android:maxLines="8"
        android:hint="@string/species_description"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:scrollbars="vertical"
        android:scrollHorizontally="false"
        android:autofillHints="@string/species_description" />
</LinearLayout>